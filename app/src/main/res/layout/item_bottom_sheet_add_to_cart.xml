<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addToCartBottomSheet">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_rect_bottom_sheet">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="120dp"
                    android:layout_height="200dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/imageProduct"
                    android:src="@drawable/img_cat_food_royal1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/edusahand_bold"
                        android:gravity="right"
                        android:text="@string/productName"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/productAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/edusahand_bold"
                        android:gravity="right"
                        android:layout_gravity="bottom"
                        android:text="@string/productAmount"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/productPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/edusahand_bold"
                        android:gravity="right"
                        android:layout_gravity="bottom"
                        android:text="@string/productPrice"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/addCartAction"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="end"
                android:backgroundTint="@color/brownV1"
                android:text="@string/addToCart"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>